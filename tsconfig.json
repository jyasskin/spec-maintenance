{
    "extends": "@tsconfig/node20/tsconfig.json",
    "esm": true,
    "compilerOptions": {
        "outDir": "build",
        "module": "nodenext",
        "moduleResolution": "NodeNext",
        "allowJs": true,
        "resolveJsonModule": true,
        "noImplicitAny": false
    },
    "include": [
        "analysis/**/*",
        "frontend/src/lib/**/*",
        "scanner/**/*"
    ]
}
